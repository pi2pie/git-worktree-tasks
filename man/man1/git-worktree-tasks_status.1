.TH "GIT-WORKTREE-TASKS" "1" "Feb 2026" "git-worktree-tasks" "Git Worktree Tasks Manual"

.SH NAME
git-worktree-tasks-status - Show detailed worktree status


.SH SYNOPSIS
\fBgit-worktree-tasks status [task] [flags]\fP


.SH DESCRIPTION
Show detailed worktree status


.SH OPTIONS
\fB--abs\fP[=false]
	alias for --absolute-path

.PP
\fB--absolute-path\fP[=false]
	show absolute paths instead of relative

.PP
\fB--branch\fP=""
	filter by branch name

.PP
\fB--grid\fP[=false]
	render table with grid borders

.PP
\fB-h\fP, \fB--help\fP[=false]
	help for status

.PP
\fB-o\fP, \fB--output\fP="table"
	output format: table, json, or csv

.PP
\fB--strict\fP[=false]
	require exact task match (after trimming and slugifying)

.PP
\fB--target\fP=""
	target branch for ahead/behind comparison

.PP
\fB--task\fP=""
	filter by task name


.SH OPTIONS INHERITED FROM PARENT COMMANDS
\fB--mask-sensitive-paths\fP[=true]
	mask home-directory paths in --dry-run output

.PP
\fB-m\fP, \fB--mode\fP="classic"
	execution mode: classic or codex

.PP
\fB--no-mask-sensitive-paths\fP[=false]
	disable home-directory path masking in --dry-run output

.PP
\fB--nocolor\fP[=false]
	disable color output

.PP
\fB--theme\fP="default"
	color theme: default, dracula, gruvbox, nord, solarized

.PP
\fB--themes\fP[=false]
	print available themes and exit


.SH SEE ALSO
\fBgit-worktree-tasks(1)\fP
